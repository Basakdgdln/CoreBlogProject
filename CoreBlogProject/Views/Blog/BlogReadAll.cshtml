@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>

<html lang="en-us">

<body>

    <main>
        <section class="section">
            <div class="container">
                <div class="row no-gutters-lg">
                    <div class="col-lg-8 mb-5 mb-lg-0">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-12" style="width:1500px">
                                    <article class="card article-card">
                                        <a href="article.html">
                                            <div class="card-image">
                                                <div class="post-info">
                                                    <span class="text-uppercase">@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy")) </span>
                                                    <span class="text-uppercase">@item.Writer.WriterName</span>
                                                </div>
                                                <img loading="lazy" decoding="async" src="@item.BlogImage" alt="Post Thumbnail" class="w-100" style="width:480px; height:400px">
                                            </div>
                                        </a>
                                        <div class="card-body px-0 pb-1">
                                            <ul class="post-meta mb-2">
                                                <li>
                                                    <a href="#">@item.Category.CategoryName</a>
                                                    <a href="#">@item.Writer.WriterName</a>
                                                </li>
                                            </ul>
                                            <h2 class="h1">
                                                <a class="post-title" href="article.html">
                                                    @item.BlogTitle
                                                </a>
                                            </h2>
                                            <p class="card-text">@item.BlogContent</p>
                                        </div>
                                    </article>
                                </div>
                            }

                            @await Component.InvokeAsync("WriterLastBlog", new { id = ViewBag.id })

                        </div>
                    </div>

                </div>
            </div>
        </section>
    </main>

</body>
</html>




<div class="col-lg-12 left-blog-info-w3layouts-agileits text-left">
    @await Component.InvokeAsync("CommentListByBlog", new { id = ViewBag.id })

    @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")

</div>

