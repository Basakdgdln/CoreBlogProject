@using CoreBlogProject.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <th>@x.ID</th>
            <td>@x.Name</td>
            <td><a href="/Employee/DeleteEmployee/@x.ID" class="btn btn-outline-danger">Sil</a></td>
          <td><a href="/Employee/EditEmployee/@x.ID" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Employee/AddEmployee" class="btn btn-outline-primary">Yeni Çalışan Girişi</a>