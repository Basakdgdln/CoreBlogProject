@using EntityLayer.Concrete
@model List<Blog>

@foreach (var x in Model)
{
    <div class="col-md-6 mb-4">
        <article class="card article-card article-card-sm h-100">
            <a href="article.html">
                <div class="card-image">
                    <div class="post-info">
                        <span class="text-uppercase">@(((DateTime)x.BlogCreateDate).ToString("dd-MMM-yyyy"))</span>
                        <span class="text-uppercase">@x.Writer.WriterName</span>
                    </div>
                    <img loading="lazy" decoding="async" src="@x.BlogImage" alt="Post Thumbnail" class="w-100" style="width:420px; height:250px">
                </div>
            </a>
            <div class="card-body px-0 pb-0">
                <ul class="post-meta mb-2">
                    <li>
                        <a href="#!">@x.Category.CategoryName</a>
                    </li>
                </ul>
                <h2>
                    <a class="post-title" href="/Blog/BlogReadAll/@x.BlogID">
                        @x.BlogTitle
                    </a>
                </h2>
                <p class="card-text">@x.BlogContent.Substring(0, 115) …</p>
                <div class="content">
                    <a class="read-more-btn" href="/Blog/BlogReadAll/@x.BlogID">Devamını oku</a>
                </div>
            </div>
        </article>
    </div>
}


