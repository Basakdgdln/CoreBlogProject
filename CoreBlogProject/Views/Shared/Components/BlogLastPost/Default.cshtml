@using EntityLayer.Concrete
@model List<Blog>

<div class="col-lg-12 col-md-6">
    <div class="widget">
        <h2 class="section-title mb-3">Son Yayınlanan Blog Yazıları</h2>
        <div class="widget-body">
            <div class="widget-list">
                @foreach (var x in Model)
                {
    <article class="card mb-4">
        <div class="card-image">
            <div class="post-info">
                <span class="text-uppercase">@(((DateTime)x.BlogCreateDate).ToString("dd-MMM-yyyy"))</span>
            </div>
            <img loading="lazy" decoding="async" src="@x.BlogImage" alt="Post Thumbnail" class="w-100">
        </div>
        <div class="card-body px-0 pb-1">
            <h3>
                <a class="post-title post-title-sm"
                   href="/Blog/BlogReadAll/@x.BlogID">
                    @x.BlogTitle
                </a>
            </h3>
            <p class="card-text">@x.BlogContent.Substring(0, 80) …</p>
            <div class="content">
                <a class="read-more-btn" href="/Blog/BlogReadAll/@x.BlogID">Devamını oku</a>
            </div>
        </div>
    </article>
    }
                @await Component.InvokeAsync("BlogLast3Post")

            </div>
        </div>
    </div>
</div>
