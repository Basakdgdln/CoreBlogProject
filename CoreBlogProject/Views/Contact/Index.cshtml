
@{
    //ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-us">

<head>
    <meta charset="utf-8">
    <title>Reporter - HTML Blog Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
    <meta name="description" content="This is meta description">
    <meta name="author" content="Themefisher">
    <link rel="shortcut icon" href="~/reporter-bootstrap-main/theme/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="~/reporter-bootstrap-main/theme/images/favicon.png" type="image/x-icon">

    <!-- # Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Neuton:wght@700&family=Work+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- # CSS Plugins -->
    <link rel="stylesheet" href="~/reporter-bootstrap-main/theme/plugins/bootstrap/bootstrap.min.css">
    <link href="~/web/css/contact.css" rel='stylesheet' type='text/css' />

    <!-- # Main Style Sheet -->
    <link rel="stylesheet" href="~/reporter-bootstrap-main/theme/css/style.css">
</head>

<body>
    @await Html.PartialAsync("Partial1")
    <main>
        <section class="section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="breadcrumbs mb-4">
                            <a href="index.html"></a>
                            <span class="mx-1"></span>  <a href="#!"></a>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="pr-0 pr-lg-4">
                            <div class="content">
                                <h3 class="tittle"> Bize Ulaşın</h3>
                                <p>
                                    Düşünceleriniz bizim için çok değerli... İletişim formunu kullanarak bizimle iletişime geçebilirsiniz.
                                </p>
                                <div class="mt-5">
                                    <p class="h3 mb-3 font-weight-normal">
                                        <a class="text-dark" href="mailto:blog@example.com">blog@example.com</a>
                                    </p>
                                    <p class="mb-3">
                                        <a class="text-dark" href="tel:+90 234 567 8901"> +90 234 567 8901</a>
                                    </p>
                                    <p class="mb-2">İstanbul, Türkiye</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-4 mt-lg-0">
                        <form method="POST" class="row">
                            <div class="col-md-6">
                                <input type="text" class="form-control mb-4" placeholder="Adınız" name="ContactUsername" id="name">
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control mb-4" placeholder="Mail Adresiniz" name="ContactMail" id="email">
                            </div>
                            <div class="col-12">
                                <input type="text" class="form-control mb-4" placeholder="Konu" name="ContactSubject" id="subject">
                            </div>
                            <div class="col-12">
                                <textarea name="ContactMessage" id="message" class="form-control mb-4" placeholder="Mesajınız..." rows="5"></textarea>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-outline-primary" type="submit">Mesajı Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <div class="contact-map inner-sec">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1560208.969617841!2d27.26339794059169!3d40.20276417602742!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac790b17ba89d%3A0xd2d24ea0437a7ee2!2zS2FkxLFrw7Z5L8Swc3RhbmJ1bA!5e0!3m2!1str!2str!4v1693909076566!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <footer class="bg-dark mt-5">
        <div class="container section">
            <div class="row">
                <div class="col-lg-10 mx-auto text-center">
                    <a class="d-inline-block mb-4 pb-2" href="index.html">
                        <img loading="prelaod" decoding="async" class="img-fluid" src="~/reporter-bootstrap-main/theme/images/logo-white.png" alt="Reporter Hugo">
                    </a>
                    <ul class="p-0 d-flex navbar-footer mb-0 list-unstyled">
                        <li class="nav-item my-0"> <a class="nav-link" href="about.html">About</a></li>
                        <li class="nav-item my-0"> <a class="nav-link" href="article.html">Elements</a></li>
                        <li class="nav-item my-0"> <a class="nav-link" href="privacy-policy.html">Privacy Policy</a></li>
                        <li class="nav-item my-0"> <a class="nav-link" href="terms-conditions.html">Terms Conditions</a></li>
                        <li class="nav-item my-0"> <a class="nav-link" href="404.html">404 Page</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="copyright bg-dark content">Designed &amp; Developed By <a href="https://themefisher.com/">Themefisher</a></div>
    </footer>


    <!-- # JS Plugins -->
    <script src="~/reporter-bootstrap-main/theme/plugins/jquery/jquery.min.js"></script>
    <script src="~/reporter-bootstrap-main/theme/plugins/bootstrap/bootstrap.min.js"></script>

    <!-- Main Script -->
    <script src="~/reporter-bootstrap-main/theme/js/script.js"></script>

</body>
</html>

