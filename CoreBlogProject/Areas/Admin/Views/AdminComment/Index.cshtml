@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@*<td><a href="#"><i class="fa fa-check text-navy"></i></a></td>*@

<!DOCTYPE html>
<html>
<body>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yorumlar Tablosu  </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="#" class="dropdown-item">Config option 1</a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <tr>
                                <th>#</th>
                                <th>Kullanıcı</th>
                                <th>Başlık</th>
                                <th>Blog</th>
                                <th>Puan</th>
                                <th>Tarih</th>
                                <th>Detaylar</th>
                            </tr>


                            @foreach (var x in Model)
                            {
                                <tr>
                                    <th>#</th>
                                    <td>@x.CommentUsername</td>
                                    <td>@x.CommentTitle</td>
                                    <td>@x.Blog.BlogTitle</td>

                                    @if (x.BlogScore <= 3)
                                    {
                                        <td class="text-danger">
                                            <i class="fa fa-level-down"></i> @x.BlogScore
                                        </td>
                                    }
                                    @if (x.BlogScore >= 4 && x.BlogScore <= 6)
                                    {
                                        <td class="text-warning">
                                            <i class="fa fa-level-up"></i>
                                            @x.BlogScore
                                        </td>
                                    }
                                    @if (x.BlogScore >= 7 && x.BlogScore < 9)
                                    {
                                        <td class="text-info">
                                            <i class="fa fa-level-up"></i>
                                            @x.BlogScore
                                        </td>
                                    }
                                    @if (x.BlogScore >= 9)
                                    {
                                        <td class="text-success">
                                            <i class="fa fa-level-up"></i>
                                            @x.BlogScore
                                        </td>
                                    }

                                    <td>@(((DateTime)x.CommentDate).ToString("dd-MMM-yyyy"))</td>
                                    <td>
                                        <a href="/Admin/AdminComment/DeleteComment/@x.CommentID" class="btn btn-outline-danger" onclick="confirm('Gerçekten Silmek İstiyor Musunuz?')"><i class="fa fa-close">&nbsp;</i>Sil</a> &nbsp;&nbsp;
                                        <a href="/Admin/AdminComment/EditComment/@x.CommentID" class="btn btn-outline-primary"><i class="fa fa-envelope-open">&nbsp;</i>Görüntüle</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

