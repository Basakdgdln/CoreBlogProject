@model EntityLayer.Concrete.Comment
@{
    ViewData["Title"] = "EditComment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Yorum Görüntüleme Paneli</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="form-group  row">
                    @Html.HiddenFor(x => x.CommentID)
                    <label class="col-sm-2 col-form-label" asp-for="@Model.CommentUsername">Kullanıcı Ad Soyad:</label>
                    <div class="col-sm-10">@Html.TextBoxFor(x => x.CommentUsername, new { @class = "form-control", @readonly = "readonly" })</div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="@Model.CommentTitle">Konu:</label>
                    <div class="col-sm-10">@Html.TextBoxFor(x => x.CommentTitle, new { @class = "form-control", @readonly = "readonly" })</div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="@Model.BlogID">Blog Başlığı:</label>
                    <div class="col-sm-10"><input type="text" class="form-control" value="@ViewBag.blog" name="BlogID" readonly /></div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Blog Puan:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.BlogScore, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Blog Yorumu:</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(x => x.CommentContent, 4, 10, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="clearfix"></div>
                <a href="/Admin/AdminComment/Index" class="btn btn-warning" style="float:right; height:40px; width:200px">Yorum Listesine Geri Dön</a>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>


