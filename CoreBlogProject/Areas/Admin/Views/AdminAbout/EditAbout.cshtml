@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Hakkımızda Güncelleme Paneli</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("EditAbout", "AdminAbout", FormMethod.Post))
                {
                    <div class="form-group  row">
                        @Html.HiddenFor(x => x.AboutID)
                        <label class="col-sm-2 col-form-label" asp-for="@Model.AboutDetails1">Hakkında Detay:</label>
                        <div class="col-sm-10">@Html.TextAreaFor(x => x.AboutDetails1, 4, 10, new { @class = "form-control" })</div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="@Model.AboutDetails2">Hakkında Detay:</label>
                        <div class="col-sm-10">@Html.TextAreaFor(x => x.AboutDetails2, 4, 10, new { @class = "form-control" })</div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="@Model.AboutImage2">Önsöz:</label>
                        <div class="col-sm-10">@Html.TextBoxFor(x => x.AboutImage2, new { @class = "form-control" })</div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Hakkımızda Resim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.AboutImage1, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <button type="submit" class="btn btn-warning" style="float:right; height:45px; width:200px">Değişiklikleri Kaydet</button>
                }
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>


