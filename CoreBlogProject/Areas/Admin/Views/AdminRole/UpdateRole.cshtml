@using CoreBlogProject.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    <div class="form-group">
        <input name="Id" class="form-control" readonly value="@Model.Id"/>
    </div>

    <div class="form-group">
        <input name="Name" class="form-control"  value="@Model.Name" placeholder="Rol başlığını giriniz..." />
    </div>

    <button class="btn btn-outline-info" style="height:35px; width:175px">Değişiklikleri Kaydet</button>
</form>

